{
  "rules": {
    "no-unused-vars": [
      1
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1,
        "FunctionDeclaration": {
          "parameters": "first"
        },
        "FunctionExpression": {
          "parameters": "first"
        }
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "linebreak-style": [
      0,
      "windows"
    ],
    "semi": [
      0
    ],
    "no-console": 0
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "classes": true
    }
  },
  "globals": {
    "expect": true,
    "assert": true,
    "chai": true
  }
}
